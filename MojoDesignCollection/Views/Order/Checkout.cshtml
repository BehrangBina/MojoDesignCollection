@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MojoDesignCollection.Models.Order
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Select Country</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1,shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/xcode.min.css" />

    <link rel="stylesheet" href="/lib/css/bootstrap-select-country.min.css" />
    <style>

        input[type=text] {
            background-color: #D8F8F9;
        }

        input[type=email] {
            background-color: #D8F8F9;
        }

        textarea {
            background-color: #D8F8F9 !important;
        }

        form > div:nth-child(11) > div:nth-child(2) > div > button {
            background-color: #D8F8F9 !important;
        }

        .order-menu {
            color: #00e6ee;
            list-style-type: none;
        }

            .order-menu li {
                display: inline;
            }

        .masthead {
            height: 200px;
            background-image: url('/image-desktop/SVG/order.svg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin-bottom: 40px;
        }
    </style>
</head>

<body>


    <div class="masthead">

    </div>
    <div class="container">

        <br><br>
        <div class="row pt-3">
            <div class="col-md-1"></div>
            <div class="col-md-2">
                <a href="/Home"> <i class="fa fa-2x fa-home" aria-hidden="true"></i></a>
            </div>
            <div class="col-md-2">
                <a href="/Shop"> <i class="fa fa-2x fa-shopping-basket"></i></a>
            </div>
            <div class="col-md-2">
                <a href="/Cart"><i class="fa fa-2x fa-shopping-cart" aria-hidden="true"></i></a>
            </div>
            <div class="col-md-6"></div>
        </div><br><br>

        <form asp-action="Checkout" method="POST" class="ChekcoutForm">


            <div class="row">
                <h4>Contact Details</h4>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="form-group">
                        <label>Email:</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="email@domain.com" />
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </div>

            <div class="row">
                <h4>Billing Address</h4>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" type="text" />
                </div>
                <div class="col-md-5">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" type="text" />
                </div>
                <div class="col-md-1"></div>
            </div><br>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="form-group">
                        <input asp-for="Line1" class="form-control" placeholder="Address Line1" type="text" />
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <input asp-for="Line2" class="form-control" placeholder="Address Line2" type="text" />
                </div>
                <div class="col-md-1"></div>
            </div><br>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <input asp-for="Line3" class="form-control" placeholder="Address Line3" type="text" />
                </div>
                <div class="col-md-1"></div>
            </div><br>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <span>Country:      </span>
                    <select class="selectpicker countrypicker dropdown" data-flag="true" name="Country"></select>
                </div>
                <div class="col-md-5">
                    <input asp-for="State" class="form-control" placeholder="State/Teritory" type="text" />
                </div>
                <div class="col-md-1"></div>
            </div><br>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <input asp-for="Phone" class="form-control" placeholder="Phone" type="text" />
                </div>
                <div class="col-md-1"></div>
            </div><br />

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <input type="checkbox" name="giftWrapped" checked>
                    <label for="giftWrapped">Wrap As a gift</label>
                </div>
                <div class="col-md-1"></div>
            </div><br />

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label>Note:</label>
                        <div class="form-group shadow-textarea">
                            <textarea wrap="hard" class="form-control z-depth-1" id="note" rows="5"
                                      placeholder="Note To The Seller"></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 align-bottom">
                    <br><br><br><br><br>
                    <input type="submit" value="Complete Order" class="btn btn-primary" />

                </div>
            </div>
        </form>
    </div>

    <!--Scripts-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>

    <script src="/lib/js/bootstrap-select-country.min.js"></script>
</body>

</html>
